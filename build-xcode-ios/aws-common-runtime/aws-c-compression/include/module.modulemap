module AwsCCompression {
  requires c99

  config_macros AWS_NO_STATIC_IMPL, AWS_UNSTABLE_TESTING_API

  use AwsCCommon

  header "aws/compression/compression.h"
  header "aws/compression/error.h"
  header "aws/compression/exports.h"
  header "aws/compression/huffman.h"

  explicit module Testing {
    header "aws/testing/compression/huffman.h"
    textual header "aws/testing/compression/huffman.inl"

    export *
  }

  export *

  link "aws-c-compression"
}
