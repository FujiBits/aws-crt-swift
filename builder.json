{
  "name": "aws-crt-swift",
  "enabled": true,
  "build_steps": [
    "build",
    "swift build -c release"
  ],
  "test_steps": [
    "swift test"
  ],
  "hosts": {
    "ubuntu": {},
    "macos": {},
    "al2": {},
    "al2012": {
      "enabled": false
    },
    "alpine": {
      "enabled": false
    },
    "windows": {
      "enabled": false
    }
  },
  "targets": {
    "ios": {
      "pre_build_steps": [
        "cmake -H. -Bxcode-build -GXcode -DBUILD_DEPS=ON -DCMAKE_SYSTEM_NAME=iOS -DCMAKE_OSX_ARCHITECTURES=\"arm64;x86_64\" -DCMAKE_OSX_DEPLOYMENT_TARGET=13.0",
        "xcodebuild build -project xcode-build/AwsCommonRuntimeKit.xcodeproj -scheme AwsCommonRuntimeKit -sdk iphonesimulator"
      ]
    }
  }
}
