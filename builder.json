{
  "name": "aws-crt-swift",
  "enabled": true,
  "build_steps": [
    "build",
    "swift build -c release"
  ],
  "test_steps": [
    "swift test"
  ],
  "hosts": {
    "ubuntu": {},
    "macos": {},
    "al2": {},
    "al2012": {
      "enabled": false
    },
    "alpine": {
      "enabled": false
    },
    "windows": {
      "enabled": false
    }
  },
  "targets": {
    "ios": {
      "cmake_flags": [
        "-Bxcode-build",
        "-H."
      ],
      "build_steps": [
        "build",
        "xcodebuild build -project xcode-build/AwsCommonRuntimeKit.xcodeproj -scheme AwsCommonRuntimeKit -sdk iphonesimulator"
      ]
    }
  }
}
